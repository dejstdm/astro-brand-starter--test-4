---
const slides = [
  {
    title: "Lessons and insights",
    titleHighlight: "from 8 years",
    subtitle: "Where to grow your business as a photographer: site or social media?",
    buttonText: "Register",
    buttonLink: "#register",
    image: "/images/hero/slide1.webp"
  },
  {
    title: "Learn and grow",
    titleHighlight: "with our community",
    subtitle: "Connect with photographers and expand your creative network today.",
    buttonText: "Join Now",
    buttonLink: "#join",
    image: "/images/hero/slide2.webp"
  },
  {
    title: "Build your brand",
    titleHighlight: "step by step",
    subtitle: "Professional tools and guidance to help you succeed as a photographer.",
    buttonText: "Get Started",
    buttonLink: "#start",
    image: "/images/hero/slide3.webp"
  }
];
---

<section class="hero-slider page-sec page-sec--bg-gray">
  <div class="swiper hero-slider__swiper">
    <div class="swiper-wrapper">
      {slides.map((slide) => (
        <div class="swiper-slide">
          <div class="hero-slider__slide">
            <div class="container">
              <div class="hero-slider__content">
                <div class="hero-slider__text-group">
                  <div class="hero-slider__text">
                    <h1 class="hero-slider__title">
                      {slide.title}<br />
                      <span class="hero-slider__title-highlight">{slide.titleHighlight}</span>
                    </h1>
                    <p class="hero-slider__subtitle">{slide.subtitle}</p>
                  </div>
                  <a href={slide.buttonLink} class="btn btn--primary">
                    {slide.buttonText}
                  </a>
                </div>
                <div class="hero-slider__image-wrapper">
                  <img 
                    src={slide.image} 
                    alt="Hero illustration" 
                    class="hero-slider__image"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Pagination -->
    <div class="swiper-pagination hero-slider__pagination"></div>
  </div>
</section>
