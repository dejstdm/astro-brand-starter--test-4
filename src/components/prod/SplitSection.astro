---
interface Props {
  title: string;
  description: string;
  image: string;
  imageAlt?: string;
  buttonText?: string;
  buttonLink?: string;
  imagePosition?: 'left' | 'right';
}

const { 
  title, 
  description, 
  image, 
  imageAlt = 'Section illustration',
  buttonText = 'Learn More',
  buttonLink = '#',
  imagePosition = 'left'
} = Astro.props;
---

<section class={`split-section page-sec page-sec--bg-white split-section--image-${imagePosition}`}>
  <div class="container">
    <div class="split-section__inner">
      
      <div class="split-section__image">
        <img src={image} alt={imageAlt} />
      </div>

      <div class="split-section__content">
        <div class="split-section__text">
          <h2 class="split-section__title">{title}</h2>
          <p class="split-section__description">{description}</p>
        </div>
        <a href={buttonLink} class="btn btn--primary">{buttonText}</a>
      </div>

    </div>
  </div>
</section>
