---
import ProdLayout from "../../layouts/ProdLayout.astro";
import BlogPreview from "../../components/prod/BlogPreview.astro";

const blogCards = [
  {
    image: "https://api.builder.io/api/v1/image/assets/TEMP/a8dedde3c27ec5ec6a4f17e9cf6fdc96c66228bd",
    title: "Creating Streamlined Safeguarding Processes with OneRen",
    link: "#blog-1",
    imageAlt: "Team member working on laptop"
  },
  {
    image: "https://api.builder.io/api/v1/image/assets/TEMP/4f8e8c5dfb2d0fa8e9199b25302a4175ee046b30",
    title: "What are your safeguarding responsibilities and how can you manage them?",
    link: "#blog-2",
    imageAlt: "Person working on laptop with coffee"
  },
  {
    image: "https://api.builder.io/api/v1/image/assets/TEMP/77e832aa004656cddff1d4f686a81f9da2239530",
    title: "Revamping the Membership Model with Triathlon Australia",
    link: "#blog-3",
    imageAlt: "Laptop with yellow screen and plant"
  }
